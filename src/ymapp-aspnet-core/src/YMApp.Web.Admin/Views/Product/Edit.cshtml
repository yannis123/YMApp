@model YMApp.Web.Admin.Models.Products.EditProductViewModel
@{
    ViewData["Title"] = "Index";
    var fields = Model.ProductFields;
    var categorys = Model.Categorys;
}

@section scripts{
    <script src="~/view-resources/views/product/edit.js" asp-append-version="true"></script>
}
<div class="layui-row">
    <form class="layui-form layui-form-pane" action="">
        <div class="layui-form-item">
            <label class="layui-form-label">商品名称</label>
            <div class="layui-input-block">
                <input type="text" name="ProductName" autocomplete="off" placeholder="请输入商品名称" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">商品分类</label>
                <div class="layui-input-block">
                    <select name="CategoryId" lay-filter="aihao">
                        <option value="">请选则分类</option>
                        @foreach (var item in categorys)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">价格</label>
                <div class="layui-input-inline">
                    <input type="text" name="Price" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        @foreach (var item in fields)
        {
            @if (item.ParentId == 0)
            {
                <div class="product-field-list">
                    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                        <legend _grade="1" _fieldName="@item.Name" _fieldCategoryId="@item.Id">@item.Name</legend>
                    </fieldset>
                    @foreach (var field in fields.Where(m => m.ParentId == item.Id))
                    {
                        <div class="layui-form-item" _grade="2" _fieldName="@item.Name" _fieldCategoryId="@item.Id">
                            <label class="layui-form-label">@field.Name</label>
                            <input type="hidden" value="@field.Id" name="CategoryId" />
                            <div class="layui-input-inline">
                                <input type="text" name="FieldValue" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    }
                </div>
            }
        }
        <div class="layui-form-item">
            <button class="layui-btn" lay-submit="" lay-filter="demo2">保存</button>
        </div>
    </form>
</div>