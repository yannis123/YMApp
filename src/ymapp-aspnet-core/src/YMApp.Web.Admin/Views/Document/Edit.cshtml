@model YMApp.Web.Admin.Models.Document.EditDocumentViewModel
@{
    ViewData["Title"] = "Index";
    var categorys = Model.Categorys;
    var document = Model.Document;
}
@section scripts{
    <script src="~/view-resources/views/document/edit.js" asp-append-version="true"></script>
}
<div class="layui-row">
    <form class="layui-form layui-form-pane" action="">
        <input type="hidden" value="@document.Id" name="id" />

        <div class="layui-form-item">
            <label class="layui-form-label"> <span class="x-red">*</span>分类</label>
            <div class="layui-input-inline">
                <select name="CategoryId" lay-verify="required" lay-filter="aihao">
                    <option value="">请选则分类</option>
                    @foreach (var item in categorys)
                    {
                        if (document.CategoryId != 0 && document.CategoryId == item.Id)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }

                    }
                </select>
            </div>
            <label class="layui-form-label"><span class="x-red">*</span>文件名</label>
            <div class="layui-input-inline">
                <input type="text" name="name" value="@document.Name" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label"><span class="x-red">*</span>描述</label>
            <div class="layui-input-block">
                <input type="text" name="describe" value="@document.Describe" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label"><span class="x-red">*</span>文件路径</label>
            <div class="layui-input-inline">
                <input type="hidden" name="filePath" value="@document.FilePath">
                <input type="hidden" name="fileSize" value="@document.FileSize">
                <input type="hidden" name="oriName" value="@document.OriName">
                <button type="button" class="layui-btn" id="upload">
                    <i class="layui-icon">&#xe67c;</i>选择文件
                </button>
            </div>
            <div class="layui-form-mid layui-word-aux" id="fileName">@document.OriName</div>
        </div>


        <div class="layui-form-item">
            <button class="layui-btn" lay-submit="" lay-filter="save">保存</button>
        </div>
    </form>
</div>

