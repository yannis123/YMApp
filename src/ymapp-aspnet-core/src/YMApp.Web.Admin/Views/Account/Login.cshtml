@section styles{
    <link rel="stylesheet" href="~/lib/xadmin/css/login.css" />
}
@section scripts{
    <script src="~/view-resources/views/account/login.js" asp-append-version="true"></script>
}
<div class="login-bg">

    <div class="login layui-anim layui-anim-up">
        <div class="message">x-admin2.0-管理登录</div>
        <div id="darkbannerwrap"></div>

        <form method="post" class="layui-form">
            <input name="UsernameOrEmailAddress" placeholder="用户名" type="text" lay-verify="required" class="layui-input">
            <hr class="hr15">
            <input name="Password" lay-verify="required" placeholder="密码" type="password" class="layui-input">
            <hr class="hr15">
            <input value="登录" lay-submit lay-filter="login" style="width:100%;" type="button">
            <hr class="hr20">
        </form>
    </div>


    <!-- 底部结束 -->
</div>